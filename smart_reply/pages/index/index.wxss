/* index.wxss */
/* 基本样式 */
page {
  background-color: #f0f2f5;
  height: 100vh; /* 确保页面高度为视口高度 */
  display: flex;
  flex-direction: column;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%; /* 设置容器高度为页面高度 */
  overflow-y: auto; /* 启用垂直滚动 */
  padding: 20rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f8f8;
}

.logo {
  width: 350rpx;
  height: 150rpx; 
}

.comment-form {
  margin: 20rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.comment-list {
  margin: 20rpx;
  flex-grow: 1; /* 确保评论列表可以扩展以填充剩余空间 */
}

.comment-item {
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border: 1px solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.comment-item text {
  display: block;
  margin-bottom: 10rpx;
  color: #333333;
}

.comment-item .replies {
  margin-top: 20rpx;
  border-top: 1px solid #e0e0e0;
  padding-top: 20rpx;
}

.reply-item {
  padding: 10rpx 0;
}

.reply-first-text {
  display: block;
  margin-bottom: 5rpx;
  color: #333333;
  font-weight: bold;
}

.reply-text {
  display: block;
  margin-bottom: 5rpx;
  color: #555555;
}

.reply-border {
  border-bottom: 1px solid #f0f0f0;
}

button {
  margin-top: 10rpx;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 5rpx;
  padding: 8rpx 15rpx;
  font-size: 20rpx;
}

input {
  width: 100%;
  height: 80rpx;
  padding: 10rpx;
  margin-top: 10rpx;
  border: 1px solid #e0e0e0;
  border-radius: 5rpx;
  font-size: 28rpx;
}

/* 活力颜色 */
.comment-item button {
  width: 5%; 
  background-color: transparent; 
}
.button-group {
  display: flex;
  justify-content: space-around; /* 或者使用 "center" */
}

.comment-item .replies .reply-item button {
  background-color: #00a8ff;
}